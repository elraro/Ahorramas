        android:angle="90"
        android:centerColor="#56c501"
        android:centerX="35%"
        android:endColor="#4eb201"
        android:startColor="#5ed501"
        android:type="linear" />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
