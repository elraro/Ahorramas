<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.elraro.ahorramas">

    <application
        android:name=".GlobalVars"
        android:allowBackup="true"
        android:icon="@drawable/ahorramas_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".eu.elraro.ahorramas.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".eu.elraro.ahorramas.activity.HelpActivity"
            android:label="@string/title_help"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".eu.elraro.ahorramas.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".eu.elraro.ahorramas.activity.UserPreferenceActivity"
            android:label="@string/title_activity_user_preference"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".eu.elraro.ahorramas.activity.BuyActivity"></activity>
        <activity
            android:name=".eu.elraro.ahorramas.activity.FinishBuyActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>
